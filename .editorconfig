# top-most EditorConfig file
root = true

## ALL FILES
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

## JSON CONFIGURATION
[*.{json}]
indent_style = space
indent_size = 2
tab_width = 2

## GO SOURCE CODE
[*.{go}]
indent_style = tab
indent_size = 2
tab_width = 2

## HTML SOURCE CODE
[*.{html,xhtml}]
indent_style = space
indent_size = 2
tab_width = 2

## JAVASCRIPT SOURCE CODE
[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 2
tab_width = 2

## RUST SOURCE CODE
[*.{rs}]
indent_style = tab
indent_size = 2
tab_width = 2

## SOLIDITY SOURCE CODE
[*.{sol}]
indent_style = tab
indent_size = 2
tab_width = 2

## TOML CONFIGURATION
[*.{toml}]
indent_style = space
indent_size = 4
tab_width = 4

## XML CONFIGURATION
[*.{xml}]
indent_style = space
indent_size = 2
tab_width = 2

## YAML CONFIGURATION
[*.{yml}]
indent_style = space
indent_size = 4
tab_width = 4
